package pkg1_taller_pruebas_2;

//Ejercicio 2

public class Main {
    
    public static void main(String[] args) {
        
        String cadena1 = "abcdefg";
        String cadena2 = "gfedcba";
        
        String cadena3 = "hola";
        String cadena4 = "chao";

        System.out.println("¿'" + cadena1 + "' es la inversa de '" + cadena2 + "'? " + Inversa(cadena1, cadena2));
        System.out.println("¿'" + cadena3 + "' es la inversa de '" + cadena4 + "'? " + Inversa(cadena3, cadena4));
    }
    
    public static boolean Inversa(String cadena1, String cadena2) {
        
        // longitud igual?
        if (cadena1.length() != cadena2.length()) {
            return false;
        }

        // Recorre cadena y compara
        for (int i = 0; i < cadena1.length(); i++) {
                    
            if (cadena1.charAt(i) != cadena2.charAt(cadena1.length() - 1 - i)) {
                return false; // Si un par no coincide, retorna false
            }
        }
        
        
        return true;
    }
}
  

    

